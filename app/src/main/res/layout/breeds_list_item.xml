<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"

        android:layout_height="wrap_content">
<!--        TODO change to relative layour instead of hardcoding values-->
        <com.google.android.material.card.MaterialCardView
            android:id="@+id/dogCard"
            android:layout_width="290dp"
            android:layout_height="200dp"
            android:layout_marginBottom="16dp"
            android:background="?attr/colorSurface"
            android:backgroundTint="?attr/colorPrimarySurface"
            android:clipToPadding="true"
            app:cardCornerRadius="28dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">


                <com.google.android.material.imageview.ShapeableImageView
                    android:id="@+id/breedPhoto"
                    android:layout_width="match_parent"
                    android:layout_height="143dp"
                    android:scaleType="fitXY"
                    app:layout_constraintBottom_toTopOf="@+id/breedName"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    tools:src="@drawable/index" />

                <com.google.android.material.textview.MaterialTextView
                    android:id="@+id/breedName"
                    android:layout_width="match_parent"
                    android:layout_height="53dp"
                    android:gravity="center"
                    android:textAppearance="?attr/textAppearanceButton"
                    android:textColor="?attr/colorOnSurface"
                    tools:text="generic breedname"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/breedPhoto" />
            </androidx.constraintlayout.widget.ConstraintLayout>
        </com.google.android.material.card.MaterialCardView>
    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>